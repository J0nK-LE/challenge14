<div class="text-center">
<div class="row mb-4 comment">
  <div class="col-md-5">
    <h2>
      <a href="/comment/{{comment.id}}">{{comment.title}}</a>
    </h2>
      <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.comment}}
    </p>
  </div>
</div>
</div>
