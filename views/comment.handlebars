<div class='card mb-4'>
  <div class='row title'>
    <h2 class='titleText'>
      {{title}}
    </h2>
    <p class='userText text-center'>Created by
      {{user.name}}
      on
      {{format_date date_created}}</p>
  </div>
  <div class='comment'>
    <p class='commentText'>
      {{comment}}
    </p>
  </div>
  <div class='deleteBtn'>
    <button
      class='btn deleteBtn'
      data-id='{{comment.id}}'
    >DELETE</button>
  </div>
</div>

<script src='../js/comment.js'></script>